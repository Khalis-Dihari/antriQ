<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminDashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AdminDashboardActivity">

    <TextView
        android:id="@+id/tvWelcomeAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat datang, Admin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <Button
        android:id="@+id/btnAddQueue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Antrian"
        android:backgroundTint="@color/design_default_color_primary"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvListLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Antrian"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQueues"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

</LinearLayout>
