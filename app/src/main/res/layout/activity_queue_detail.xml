<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/background_light"
    tools:context=".YourActivityName">

    <!-- ðŸ”º Header Merah Full Atas -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_merahatasuserdetail"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANTRIAN ANDA"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:letterSpacing="0.03" />
    </LinearLayout>

    <!-- ðŸ”˜ Tombol Hapus (kiri) -->
    <Button
        android:id="@+id/btnDeleteQueue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Hapus"
        android:textColor="@android:color/white" />

    <!-- ðŸ”˜ Tombol Kembali (kanan) -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Kembali"
        android:textColor="@android:color/white" />

    <!-- ðŸ“‹ RecyclerView di bawah tombol -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQueueUsers"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_below="@+id/btnBack"
        android:layout_marginTop="36dp"
        tools:ignore="SpeakableTextPresentCheck" />
</RelativeLayout>
